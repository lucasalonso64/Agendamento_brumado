<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Agendamento</h2>
            </div>
            <div class="p-2">
                <a href="/admin/chamados">
                    <button class="btn btn-outline-info btn-sm">
                        Listar
                    </button>
                </a>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form action="/admin/add-chamado" method="POST">

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label><span class="text-danger">*</span> Nome</label>
                    <input name="nome" type="text" class="form-control" id="nome" placeholder="Informe seu nome">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label><span class="text-danger">*</span> Telefone</label>
                    <input name="telefone" type="numero" class="form-control" id="telefone"
                        placeholder="Informe seu telefone">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label><span class="text-danger">*</span>Data do agendamento (Entrada)</label><br>
                    <input name="dataentrada" id="dataentrada" class="form-control" type="date">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label><span class="text-danger">*</span>Data da saida</label><br>
                    <input name="datasaida" id="datasaida" class="form-control" type="date">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label><span class="text-danger">*</span> Descrição</label>

                    <textarea name="descricao" class="form-control" id="descricao"
                        placeholder="Informe o motivo do agendamento" required></textarea>
                </div>
            </div>


            <button type="submit" class="btn btn-success">Agendar</button>
        </form>
    </div>
</div>